generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Appointment {
  id         Int      @id @default(autoincrement())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now())
  timestamp  DateTime @unique @db.Timestamptz
  end        DateTime @unique @db.Timestamptz
  customer   Customer @relation(fields: [customerId], references: [email])
  customerId String   @db.VarChar(100)
}

model Customer {
  id           Int           @id @default(autoincrement())
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @default(now())
  firstName    String        @db.VarChar(50)
  lastName     String        @db.VarChar(50)
  type         Type
  email        String        @unique @db.VarChar(100)
  phoneNumber  String        @db.VarChar(25)
  password     String?       @db.VarChar(60)
  appointments Appointment[]
}

model RecurringSchedule {
  day Day @id
  open Int @default(9)
  close Int @default(17)
}

model ScheduleChanges {
  date DateTime @id @db.Date
  open Int? 
  close Int?
}

model Test {
  id   Int    @id @default(autoincrement())
  text String
}

enum Type {
  USER
  GUEST
}

enum Day {
  SUNDAY
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY
}