generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Appointment {
  id         Int      @id @default(autoincrement())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now())
  timestamp  DateTime @unique @db.Timestamptz(6)
  end        DateTime @unique @db.Timestamptz(6)
  customerId String   @db.VarChar(100)
  customer   Customer @relation(fields: [customerId], references: [email])
}

model Customer {
  id           Int           @id @default(autoincrement())
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @default(now())
  firstName    String        @db.VarChar(50)
  lastName     String        @db.VarChar(50)
  type         Type
  email        String        @unique @db.VarChar(100)
  phoneNumber  String        @db.VarChar(25)
  password     String?       @db.VarChar(60)
  appointments Appointment[]
}

model Provider {
  email      String      @id @db.VarChar(100)
  firstName  String      @db.VarChar(50)
  lastName   String      @db.VarChar(50)
  title      String      @db.VarChar(100)
  bio        String?     @db.Text
  schedule   Schedule?
  procedures Procedure[]
}

model Schedule {
  id         Int      @id @default(autoincrement())
  providerId String   @db.VarChar(100)
  provider   Provider @relation(fields: [providerId], references: [email])
  Sunday     String[] @db.VarChar(15)
  Monday     String[] @db.VarChar(15)
  Tuesday    String[] @db.VarChar(15)
  Wednesday  String[] @db.VarChar(15)
  Thursday   String[] @db.VarChar(15)
  Friday     String[] @db.VarChar(15)
  Saturday   String[] @db.VarChar(15)
}

model Procedure {
  name        String     @id @db.VarChar(100)
  duration    Int        @db.SmallInt
  description String?
  providers   Provider[]
}

model RecurringSchedule {
  day   Int @id
  open  Int @default(9)
  close Int @default(17)
}

model Test {
  id   Int      @id @default(autoincrement())
  text String
  time DateTime @db.Time
}

enum Type {
  USER
  GUEST
}
