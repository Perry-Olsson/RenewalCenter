{
  "name": "appointment-booking-api",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Perry Olsson",
  "license": "MIT",
  "scripts": {
    "tsc": "rm -rf dist/ && tsc",
    "type-check": "tsc --noEmit",
    "watch": "rm -rf dist/ && tsc --watch",
    "heroku-postbuild": "npm run db:reset && npm run migrate:deploy && tsc && npm run db:seed",
    "start": "NODE_ENV=production node ./dist/index.js",
    "dev": "NODE_ENV=development ts-node-dev src/index.ts",
    "dev:js": "NODE_ENV=development nodemon dist/index.js",
    "jest": "NODE_ENV=test jest",
    "test": "NODE_ENV=test jest -o --runInBand",
    "test:all": "NODE_ENV=test jest --runInBand",
    "lint": "eslint ./src/**/*.ts",
    "ts-node": "ts-node",
    "format": "prisma format",
    "generate": "prisma generate",
    "migrate:init": "rm -rf src/prisma/migrations && prisma migrate dev --name init --preview-feature && prisma generate",
    "migrate:reset": "prisma migrate reset --preview-feature && prisma generate",
    "migrate:dev": "prisma migrate dev --preview-feature && prisma generate",
    "migrate:deploy": "prisma migrate deploy --preview-feature && prisma generate",
    "db:push": "prisma db push --preview-feature",
    "db:seed": "ts-node ./src/prisma/seeds/seed.ts",
    "db:test": "ts-node ./src/prisma/prismaTest.ts",
    "db:alter-schema-dev": "psql appointments -f ./src/prisma/schema/*",
    "db:reset": "psql $DATABASE_URL -f ./src/prisma/resetDb.sql"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.9",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.21",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/node": "^14.14.25",
    "@types/passport": "^1.0.6",
    "@types/passport-jwt": "^3.0.5",
    "@types/superagent": "^4.1.10",
    "@types/supertest": "^2.0.10",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "prisma": "^2.20.1",
    "superagent": "^6.1.0",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@prisma/client": "^2.20.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "email-validator": "^2.0.4",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0"
  },
  "prisma": {
    "schema": "src/prisma/schema.prisma"
  }
}
